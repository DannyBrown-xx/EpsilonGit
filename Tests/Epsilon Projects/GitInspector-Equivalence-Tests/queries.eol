"The following historical commit information, by author, was found in the CS Blogs Web App repository:".println();
"Author\tCommits\tInsertions\tDeletions\t% of Changes\t".println();

//var totalRepositoryNumberChanges = getNumberChanges();

for(author in Author.all.sortBy(a | a.getName())) {
	author.getName().print();
	(" (" + author.getEmailAddress() + ")").print();
	"\t".print();
	
	author.getAllAuthoredCommits().size().print();
	"\t".print();
	
	var commitsByAuthor = author.getAllAuthoredCommits().reject(a | a.isMergeCommit());
		
	var totalInsertions : Integer;
	var totalDeletions : Integer;
	for(commit in commitsByAuthor) {
		var differenceCounts = commit.getDifferenceCountFromParent();
		totalInsertions = totalInsertions + differenceCounts.getLinesAdded();
		totalDeletions = totalDeletions + differenceCounts.getLinesRemoved();
	}	
	totalInsertions.print();
	"\t".print();
	
	totalDeletions.print();
	"\t".print();
	
	var totalAuthorNumberChanges = totalInsertions + totalDeletions;
